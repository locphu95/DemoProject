@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" sizes="40x40" href="~/icon/logotile.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/user/MyCss.css" rel="stylesheet" />
    <link href="~/Content/user/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/user/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/user/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/user/seach.css" rel="stylesheet" />
    <script src="~/Content/user/jquery-1.10.2.min.js"></script>
    <script src="~/Content/user/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="menulogin">
        @Html.ActionLink("Đăng nhập", "Dangnhap", "NguoiDung")
        @Html.ActionLink("Đăng ký", "Dangky", "NguoiDung")
        <p>Xin chào User</p>
           
    </div>
    <div class="container" style="height:180px">
        <div class="row" >
            <div class="col-md-4">
                <div class="logo">
                    <a href="http://localhost:52107/BinStore/TrangChu"><img src="~/logo/logoweb.png" style="height:170px;width:140%" /></a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="header" style="text-align:center">
                    <h1><i style="color:aquamarine">Cửa Hàng Di Dộng Bin Store</i></h1>
                    <h5>Chuyên cung cấp các mẫu sản phẩm với giá tốt nhất thị trường</h5>
                    <div class="menutop" style="font-weight:bold;">
                        @Html.ActionLink("Trang chủ", "TrangChu", "BinStore")
                        @Html.ActionLink("Bảo hành", "Baohanh", "BinStore")
                        @Html.ActionLink("Khuyến mãi", "TrangChu", "BinStore")
                        @Html.ActionLink("Liên hệ", "Contact", "BinStore")
                        <div>
                                <a href="@Url.Action("GioHang","GioHang")">
                                Giỏ Hàng (@ViewBag.Tongsoluong) </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/anhbia/bia2.png" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/anhbia/bia3.png" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/anhbia/bia4.png" style="width:100%;">
                </div>
                <div class="item">
                    <img src="~/anhbia/bia5.png" style="width:100%;">
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div>
        <form role="search" class="app-search hidden-xs">
            <input type="text" placeholder="Từ khóa" class="form-control"> <a href=""><img src="~/icon/seach.png"></a>
        </form>
        @RenderBody()
    </div>
        <hr>
        <footer class="footer">
            <h4>Thực hiện bởi Nguyễn Phú Lộc</h4>
            <p>Địa chỉ:475A Điện Biên Phủ</p>
            <p>Liên hệ:01267216433</p>
            <a href="https://www.facebook.com/loc.nguyenphu.355">Facebook</a>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>
<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: 'your-app-id',
            autoLogAppEvents: true,
            xfbml: true,
            version: 'v2.10'
        });
        FB.AppEvents.logPageView();
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>


</html>

